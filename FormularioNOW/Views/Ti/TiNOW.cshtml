@model FormularioNOW.Models.NOW
@{
    ViewBag.Title = "TiNOW";
}

<div class="container">
    <h2>TiNOW</h2>
    <div class="panel panel-default">
        <div class="panel-body">
            <h3>Projeto: @Model.Nome</h3>
            <h4>Descrição: @Model.Descricao</h4>
        </div>
    </div>
</div>

@using (@Html.BeginForm())
{
    <div class="container">
        <div class="panel panel-default">
            
            <div class="panel-body">
                <div class="form-group">
                    <h3>Arquivo Transmitido Por Um Terceiro</h3>
                    @Html.TextBoxFor(a => a.TransmitidoTerceiro, new { @class = "form-control", placeholder = "Arquivo Transmitido Por Terceiro" })
                </div>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <h3>Outras Informações</h3>
                    @Html.TextAreaFor(a => a.TI, new { @class = "form-control", placeholder = "Outras Informações" })
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>

    </div>

}