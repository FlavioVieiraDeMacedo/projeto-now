    <h2>Compras</h2>
    <div class="panel panel-default">
        <div class="panel-body">
            @if (Model.Compras_status)
            {
                if (Model.Compras == "")
                {
                    <p>@Model.Compras</p>
                }
                else
                {
                    <p><i class="fa fa-times" aria-hidden="true"></i> Setor não necessario</p>
