@model FormularioNOW.Models.NOW
@{
    ViewBag.Title = "DetalhesNOW";
}

<div class="container">
    <h2>DetalhesNOW</h2>
    <div class="panel panel-default">
        <div class="panel-body">
            <h3>Projeto: @Model.Nome</h3>
            <h4>Descrição: @Model.Descricao</h4>
        </div>
    </div>
</div>

<div class="container">
    <h2>Engenharia</h2>
    <div class="panel panel-default">
        <div class="panel-body">
            @if (Model.Engenharia_status)
            {
                <h3>Geral</h3>
                <p>@Model.Engenharia</p>
                <hr />
                <h3>Maquinas</h3>
                if (Model.NecessitaNovaMaquina)
                {
                    <p>precisa de maquina nova? SIM </p>
                    <p>Descrição : @Model.DescricaoMaquina</p>
                }
                else
                {
                    <p>precisa de maquina nova? NÃO</p>
                }
            }
            else
            {
                <p><i class="fa fa-times" aria-hidden="true"></i> Perguntas ainda não respondidas</p>
            }
        </div>
    </div>
</div>

