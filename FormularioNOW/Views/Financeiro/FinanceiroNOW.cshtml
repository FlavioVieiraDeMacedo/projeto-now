@model FormularioNOW.Models.NOW
@{
    ViewBag.Title = "FinanceiroNOW";
}

<h2>FinanceiroNOW</h2>

    Nome: @Model.Nome
    Descrição: @Model.Descricao

    <div class="container">
        <h2>Engenharia</h2>
        <div class="panel panel-default">
            <div class="panel-body">
                <p>@Model.Engenharia</p>
            </div>
        </div>
    </div>
    <div class="container">
        <h2>TI</h2>
        <div class="panel panel-default">
            <div class="panel-body">
                <p>@Model.TI</p>
            </div>
        </div>
    </div>
    <div class="container">
        <h2>Compras</h2>
        <div class="panel panel-default">
            <div class="panel-body">
                <p>@Model.Compras</p>
            </div>
        </div>
    </div>
    <div class="container">
        <h2>Qualidade</h2>
        <div class="panel panel-default">
            <div class="panel-body">
                <p>@Model.Qualidade</p>
            </div>
        </div>
    </div>
    <div class="container">
        <h2>Prod. Soft</h2>
        <div class="panel panel-default">
            <div class="panel-body">
                <p>@Model.ProdSoft</p>
            </div>
        </div>
    </div>
    <div class="container">
        <h2>Produtos</h2>
        <div class="panel panel-default">
            <div class="panel-body">
                <p>@Model.Produto</p>
            </div>
        </div>
    </div>
   
@using (@Html.BeginForm())
{
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <h3>Perguntas especificas para Financeiro</h3>
                    @Html.TextAreaFor(a => a.Financeiro, new { @class = "form-control", placeholder = "TI" })
                </div>

                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>

        </div>

    </div>

}
