@model FormularioNOW.Models.NOW
@{
    ViewBag.Title = "ComprasNOW";
}




<div class="container">
    <h2>ComprasNOW</h2>
    <div class="panel panel-default">
        <div class="panel-body">
            <h3>Projeto: @Model.Nome</h3>
            <h4>Descrição: @Model.Descricao</h4>
        </div>
    </div>

    <h2>Engenharia</h2>
    <div class="panel panel-default">
        <div class="panel-body">
            <p>@Model.Engenharia</p>
        </div>
    </div>

    <h2>TI</h2>
    <div class="panel panel-default">
        <div class="panel-body">
            <p>@Model.TI</p>
        </div>
    </div>
</div>

@using (@Html.BeginForm())
{
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <h3>Perguntas especificas para Compras</h3>
                    @Html.TextAreaFor(a => a.Compras, new { @class = "form-control", placeholder = "Produto" })
                </div>

                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>

        </div>

    </div>

}