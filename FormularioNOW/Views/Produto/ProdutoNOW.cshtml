@model FormularioNOW.Models.NOW

@{
    ViewBag.Title = "ProdutoNOW";
}

<div class="container">
    <h2>ProdutoNOW</h2>
    <div class="panel panel-default">
        <div class="panel-body">
            <h3>Projeto: @Model.Nome</h3>
            <h4>Descrição: @Model.Descricao</h4>
        </div>
    </div>
</div>

@using (@Html.BeginForm())
{
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <h3>Perguntas especificas para Produtos</h3>
                    @Html.TextAreaFor(a => a.Produto, new { @class = "form-control", placeholder = "Produto" })
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <h2>Setores Envolvidos</h2>
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.CheckBoxFor(a => a.Engenharia_status)
                @Html.Label("Engenharia")
                <hr />
                @Html.CheckBoxFor(a => a.ProdSoft_status)
                @Html.Label("Prod Soft")
                <hr />
                @Html.CheckBoxFor(a => a.TI_status)
                @Html.Label("TI")
                <hr />
                @Html.CheckBoxFor(a => a.Qualidade_status)
                @Html.Label("Qualidade")
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
}